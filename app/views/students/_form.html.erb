<% if !logged_in? %>
  <div class="mu-logo-container">
    <%= link_to image_tag("monsters-university-logo.png", :class => "mu-nav-logo"), root_path %>
  </div>
<% end %>

<%= render 'shared/errors', obj: @student %>
<div class="log-in-container">

      <div class="card-panel">
        <h3 class="log-in-title"><%=(@student.new_record? ? "Sign Up" : "Edit") %></h3>
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>
            <div class="field">
              <%= f.label :name, class: "label" %>
              <div class="control">
                <%= f.email_field :name, class:"input", placeholder: "Enter your name", autofocus: true %>
              </div>

            </div>


            <div class="field">
              <%= f.label :email, class: "label" %>
              <div class="control">
                <%= f.email_field :email, class:"input", placeholder: "Enter your email address", autofocus: true %>
              </div>
            </div>

            <div class="field">
              <%= f.label :password, class: "label" %>
              <div class="control">
                <%= f.email_field :password, class:"input", placeholder: "Enter your password", autofocus: true %>
              </div>

            </div>

            <div class="field">
              <%= f.label :password_confirmation, class: "label" %>
              <div class="control">
                <%= f.email_field :password_confirmation, class:"input", placeholder: "Confirm password", autofocus: true %>
              </div>

            </div>
            <div class="log-in-button-container">
                <%= f.button(@student.new_record? ? "Sign Up" : "Submit updates", class: "button is-info") %>
            </div>

          <% end %>
        </div>

    </div>
  </div>
</div>
