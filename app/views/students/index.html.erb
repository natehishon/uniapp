<div class ="row">
  <div class="col s12">
    <h3 class="center-align">Student Directory</h3>
  </div>

<!--  <div class="bottom-container">-->
<!--    <a href="#" style="width:30px; height:30px;">-->
      <%#=image_tag("Monsters_University_Logo.svg.png")%>
